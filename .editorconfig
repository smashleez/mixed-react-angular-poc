# http://editorconfig.org
root = true

[*]
# Change these settings to your own preference
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,htm,js,css,less,rb,scss,xml,csproj,vbproj,config}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.{cs,vb,sln,msbuild,nunit,ps1,psd1,psm1}]
indent_style = tab
indent_size = 4
